upstream unicorn_<%= application %> {
  server unix:/tmp/unicorn.<%= application %>.sock fail_timeout=0;
}

server {
  listen <%= is_https? ? "443" : "80" %> <%= "default deferred" if is_default? %>;
  server_name www.<%= base_domain %>;
  root <%= current_path %>/public;

  <% if is_https? %>
  ssl                  on;
  ssl_certificate      <%= ssl_cert_path %>;
  ssl_certificate_key  <%= ssl_key_path %>;
  <% end %>

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  try_files $uri/index.html $uri @unicorn;
  location @unicorn {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    <%= "proxy_set_header X-Forwarded-Proto https;" if is_https? %>
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://unicorn_<%= application %>;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}

<% if is_https? %>

server {
  listen 443;
  server_name <%= base_domain %>;
  rewrite     ^ https://www.<%= base_domain %>$request_uri? permanent;
}
server {
  listen 80;
  server_name www.<%= base_domain %>;
  rewrite     ^ https://www.<%= base_domain %>$request_uri? permanent;
}
server {
  listen 80;
  server_name <%= base_domain %>;
  rewrite     ^ https://www.<%= base_domain %>$request_uri? permanent;
}

<% else %>
server {
  listen 80;
  server_name <%= base_domain %>;
  rewrite     ^ http://www.<%= base_domain %>$request_uri? permanent;
}
<% end %>